             <div class="tab-pane" id="pw">
               
               <h2></h2>
               
               <hr>
                  <form class="form" action="/editpassword/<%=data._id%>" method="post" id="registrationForm">
 
                      <div class="form-group">
                          
                          <div class="col-xs-6">
                              <label for="password"><h4>Password</h4></label>
                              <input type="password" class="form-control" name="password" id="txtPassword" placeholder="password" title="enter your password.">
                          </div>
                      </div>
                      <div class="form-group">
                          
                          <div class="col-xs-6">
                            <label for="password2"><h4>Verify</h4></label>
                              <input type="password" class="form-control" name="password2" id="txtConfirmPassword" placeholder="password2" title="enter your password2.">
                          </div>
                      </div>
                      <div class="form-group">
                           <div class="col-xs-12">
                                <br>
                              	<button class="btn btn-lg btn-success" onclick="return Validate()" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Save</button>                               	
                            </div>
                      </div>
              	</form>               
             </div><!--/tab-pane-->             
