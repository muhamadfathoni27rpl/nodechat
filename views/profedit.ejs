          <div class="tab-content">
            <div class="tab-pane active" id="home">
                <hr>
                  <form class="form" action="/editprofile/<%=data._id%>" method="post" id="registrationForm">
                    <div class="form-group">                          
                        <div class="col-xs-6">
                            <label for="first_name"><h4>Nama</h4></label>
                            <input type="text" class="form-control" name="nama" placeholder="Nama" value="<%=data.nama%>">
                        </div>
                    </div>
                    <div class="form-group">                          
                        <div class="col-xs-6">
                            <label for="phone"><h4>Nomer Hp</h4></label>
                            <input type="text" class="form-control" name="hp" placeholder="Nomor Hp" value="<%=data.hp%>">
                        </div>
                    </div>
          
                    <div class="form-group">                          
                        <div class="col-xs-6">
                            <label for="email"><h4>Email</h4></label>
                            <input type="email" class="form-control" name="email" placeholder="email@wkwk.com" value="<%=data.email%>">
                        </div>
                    </div> 
          
                    <div class="form-group">                          
                        <div class="col-xs-6">
                            <label for="password"><h4>website</h4></label>
                            <input type="text" class="form-control" name="web" placeholder="Website anda" value="<%=data.web%>">
                        </div>
                    </div>
                      
                     
                      
                      
                      <div class="form-group">
                           <div class="col-xs-12">
                                <br>
                              	<button class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Save</button>
